#include <iostream>

using namespace std;

int main()
{
    setlocale(0, "");
    while (true)
    {
        int figure;

        cout << "[+]Программа - ""Геометрические фигуры""" << endl << endl;
        cout << "[1]Линия" << endl << endl;
        cout << "[+]Выберите фигуру: ";
        cin >> figure;

        if (figure == 1) {
            int type, lenght;
            string texture;
            cout << "Фигура ""Линия""" << endl << endl;
            cout << "[1]Горизонтальная" << endl
                << "[2]Вертикальная" << endl << endl;
            cout << "[+]Выберите тип: ";
            cin >> type;
            cout << endl;
            cout << "[+]Длина линии: ";
            cin >> lenght;
            cout << endl;
            cout << "[+]Текстура линии: ";
            cin >> texture;
            cout << endl;

            if (type == 1) {
                for (int i = 0; i < lenght; i++) {
                    cout << texture;
                }
            }
            else if (type == 2) {
                for (int i = 0; i < lenght; i++) {
                    cout << texture << endl;
                }
            }
        }
        system("pause");
        cout << "endl";
        system("cls");
    }
    

    return 0;
}

